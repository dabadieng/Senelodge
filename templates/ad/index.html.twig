{% extends 'base.html.twig' %}

{% block title %}Nos magnifique annonce
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="my-3">Voici les annonces de nos h√∂tes
		</h1>
		<div class="row">
			{% for ad in ads %}
				{% set url = path('ads_show', {'slug':ad.slug}) %}
				<div class="col-md-4">
					<div class="card-bg-light mb-3">
						<div class="card-header text-center">
							{{ad.rooms}}
							chambres
							<strong>{{ad.price}}
								euros
							</strong>
						</div>
						<a href="{{url}}">
							<img src="{{ad.coverImage}}" alt="">
						</a>
						<div class="card-body">
							<h4 class="card-title">
								<a href="{{url}}">
									{{ad.title}}
								</a>
							</h4>
							<p class="card-text">
								{{ad.introduction}}
							</p>

							<a href="{{url}}" class="btn btn-secondary">En savoir plus</a>
						</div>
					</div>

				</div>


			{% endfor %}
		</div>
	</div>


{% endblock %}
