{% extends 'base.html.twig' %}

{% block title %}
	Nos magnifiques annonces
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-5">
			Voici les annonces de nos h√¥tes !
		</h1>
		<div>
			<a href="{{path('ad_index')}}" class="btn btn-btn colorCard">
				Filtrer ma recherche
			</a>
		</div>
		<div class="container">
			<div class="container colorCard mb-3">
				<h1 class="h3">
					Filtrer ma recherche
				</h1>
				{{form_start(form)}}
				<div class="row">
					{% for local in form.localisation %}
						<div class="col-2">
							{{form_row(local)}}
						</div>
					{% endfor %}
				</div>
				<div class="row">
					<div class="col">
						{{form_row(form.rooms)}}
					</div>
					<div class="col">
						{{form_row(form.maxPrice)}}
					</div>
					<div class="col">
						<button>
							Rechercher
						</button>
					</div>
					{{form_end(form)}}
				</div>
			</div>
			<div class="row">
				{% for ad in appointments %}
					{% include 'ad/_ad.html.twig' %}
				{% endfor %}
			</div>
		</div>

		<div class="navigation colorCard align-items-center">
			{{ knp_pagination_render(appointments) }}
		</div>
	{% endblock %}
