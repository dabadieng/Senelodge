{% extends "base.html.twig" %}

{% block title %}
	Réservation
	{{booking.id}}
{% endblock %}

{% block body %}
	{% set ad = booking.ad %}
	{% set author = ad.author %}

	{% if app.request.query.get("withAlert") %}
		<div class="alert alert-success">
			<h4 class="alert-alert-heading">
				Bravo !
			</h4>
			<p>
				Votre réservation auprès de
				<strong>
					<a href="{{path('user_show',{'slug':author.slug})}}">
						{{author.fullname}}
					</a>
				</strong>
				pour l'annonce
				<strong>
					<a href="{{path('ads_show', {'slug':ad.slug})}}">
						{{ad.title}}
					</a>
				</strong>
				a bien été enregistrée.
			</p>

		</div>
	{% endif %}

	<div class="container">
		<h1>
			Réservation N°
			{{booking.id}}
		</h1>
		<div class="row">
			<div class="col">
				<div class="alert alert-light">
					<h2>
						Détails
					</h2>
					{# Définition liste dl #}
					<dl class="row">
						<dt class="col-md-4">
							Numéro
						</dt>
						<dd class="col-md-8">
							{{booking.id}}
						</dd>
						<dt class="col-md-4">
							Date d'arrivée
						</dt>
						<dd class="col-md-8">
							{{booking.startDate | date("d/m/y")}}
						</dd>
						<dt class="col-md-4">
							Date de départ
						</dt>
						<dd class="col-md-8">
							{{booking.endDate | date("d/m/y")}}
						</dd>
						<dt class="col-md-4">
							Nombre de nuits
						</dt>
						<dd class="col-md-8">
							{{booking.duration}}
						</dd>
						<dt class="col-md-4">
							Montant total
						</dt>
						<dd class="col-md-8">
							{{booking.amount}}
							&euro;
						</dd>
						<dt class="col-md-4">
							Commentaire
						</dt>
						<dd class="col-md-8">
							{{booking.comment}}
						</dd>
					</dl>
					<br>
					<h2 class="alert-heading">
						Votre hôte
					</h2>
					<div class="row mb-3">
						<div class="col-3">
							<img class="avatar avatar.medium" src="{{author.picture}}" alt="Avatar de {{author.fullname}}">
						</div>
						<div class="col">
							<h4>
								<a href="{{path('user_show',{'slug':author.slug})}}">
									{{author.fullname}}
								</a>
							</h4>
							<span class="badge badge-primary">
								{{author.ads | length}}
								annonce(s)
							</span>
						</div>
					</div>
					{{author.description | raw}}
					<a class="btn btn-primary" href="{{path('user_show',{'slug':author.slug})}}">
						Plus d'info sur
						{{author.firstname}}
					</a>

				</div>
			</div>
			<div class="col">
				<div class="alert alert-light">
					<h2 class="alert-heading">
						Votre hébergement
					</h2>
					<h4>
						<a href="{{path('ads_show', {'slug':ad.slug})}}">
							{{ad.title}}
						</a>
					</h4>
					<img src="{{asset("/upload/image/"~ ad.coverImage)}}" alt="Image de {{ad.title}}" class="img-fluid">
					{{ad.content | raw}}
					<br>
					<a href="{{path('ads_show', {'slug':ad.slug})}}" class="btn btn-primary">
						Plus d'informations
					</a>

				</div>
			</div>
		</div>

	</div>
{% endblock %}
